generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  // Back refs
  notes Note[]
}

model Note {
  id        Int      @id @default(autoincrement())
  note_id   String   @unique @default(uuid())
  heading   String
  content   String
  createdAt DateTime @default(now())

  // Relation with User
  userId Int
  user   User @relation(fields: [userId], references: [id])
}
